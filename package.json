{
  "name": "scry-meta",
  "private": true,
  "type": "module",
  "scripts": {
    "bootstrap": "bun run scripts/bootstrap.ts",
    "setup:workstation": "bun run scripts/setup-workstation.ts",
    "setup:ssh:backup": "bun run scripts/setup-ssh-backup.ts",
    "setup:ssh:restore": "bun run scripts/setup-ssh-restore.ts",
    "setup:minio": "bun run scripts/setup-minio.ts",
    "setup:zig": "bun run scripts/setup-zig.ts",
    "doctor": "bun run scripts/doctor.ts",
    "check:agent-docs": "bun run scripts/check-agent-doc-sync.ts",
    "infra:up": "docker compose --env-file infra/.env -f infra/docker-compose.yml up -d",
    "infra:down": "docker compose --env-file infra/.env -f infra/docker-compose.yml down",
    "infra:logs": "docker compose --env-file infra/.env -f infra/docker-compose.yml logs -f",
    "lint": "bun run check:agent-docs && bunx @biomejs/biome check scripts package.json tsconfig.json biome.json",
    "format": "bunx @biomejs/biome format --write scripts package.json tsconfig.json biome.json",
    "typecheck": "bunx tsc --noEmit",
    "test": "bun test",
    "ci:root": "bun run lint && bun run typecheck && bun run test",
    "ci:app": "cd apps/bedrock-template && bun run lint && bun run typecheck && bun run test && bun run build",
    "ci": "bun run ci:root && bun run ci:app",
    "perf:lighthouse": "bun run scripts/lighthouse-run.ts",
    "perf:lighthouse:assert": "bun run scripts/lighthouse-assert.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.2.21",
    "typescript": "^5.9.2"
  }
}
