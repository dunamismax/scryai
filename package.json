{
  "name": "scryai",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "bunx @biomejs/biome check .",
    "format": "bunx @biomejs/biome format --write .",
    "typecheck": "bunx tsc --noEmit",
    "scry:bootstrap": "bun run scripts/cli.ts bootstrap",
    "scry:doctor": "bun run scripts/cli.ts doctor",
    "scry:setup:workstation": "bun run scripts/cli.ts setup:workstation",
    "scry:setup:ssh_backup": "bun run scripts/cli.ts setup:ssh_backup",
    "scry:setup:ssh_restore": "bun run scripts/cli.ts setup:ssh_restore",
    "scry:projects:list": "bun run scripts/cli.ts projects:list",
    "scry:projects:doctor": "bun run scripts/cli.ts projects:doctor",
    "scry:projects:install": "bun run scripts/cli.ts projects:install",
    "scry:projects:verify": "bun run scripts/cli.ts projects:verify",
    "scry:sync:work-desktop": "bun run scripts/cli.ts sync:work-desktop"
  },
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/node": "^24.3.0",
    "bun-types": "^1.3.9",
    "typescript": "^5.9.2"
  }
}
